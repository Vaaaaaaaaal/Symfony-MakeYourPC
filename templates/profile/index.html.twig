{% extends 'base.html.twig' %}

{% block title %}Mon profil - MakeYourPC{% endblock %}

{% block body %}
    <div class="container">
        <div class="profile-container">
            <div class="profile-info">
                <h2>Mes informations</h2>
                <p><strong>Nom :</strong> {{ user.name }}</p>
                <p><strong>Prénom :</strong> {{ user.surname }}</p>
                <p><strong>Email :</strong> {{ user.email }}</p>
                <p><strong>Adresse :</strong> {{ user.adresse ?: 'Non renseignée' }}</p>
                <p><strong>Téléphone :</strong> {{ user.telephone ?: 'Non renseigné' }}</p>
                <a href="{{ path('app_profile_edit') }}" class="btn-edit-profile">Modifier mes informations</a>
            </div>

            <div class="order-history">
                <h2>Historique des commandes</h2>
                {% if orders is empty %}
                    <p>Aucune commande pour le moment.</p>
                {% else %}
                    <table class="order-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Commande #</th>
                                <th>Date</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>
                                        <img src="{{ asset('images/' ~ order.image) }}" alt="Product" class="order-image">
                                    </td>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.date }}</td>
                                    <td>{{ order.total }}€</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
