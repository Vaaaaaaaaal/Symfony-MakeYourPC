{% extends 'base.html.twig' %}

{% block title %}Mon profil - MakeYourPC{% endblock %}

{% block body %}
    <div class="container">
        <div class="profile-container">
            <div class="profile-info">
                <h2>Mes informations</h2>
                <p><strong>Nom :</strong> {{ user.name }}</p>
                <p><strong>Prénom :</strong> {{ user.surname }}</p>
                <p><strong>Email :</strong> {{ user.email }}</p>
                <p><strong>Adresse :</strong> {{ user.adresse ?: 'Non renseignée' }}</p>
                <p><strong>Téléphone :</strong> {{ user.telephone ?: 'Non renseigné' }}</p>
                <a href="{{ path('app_profile_edit') }}" class="btn-edit-profile">Modifier mes informations</a>
            </div>

            <div class="order-history">
                <h2>Historique des commandes</h2>
                {% if orders is empty %}
                    <p>Aucune commande pour le moment.</p>
                {% else %}
                    <div class="orders-list">
                        {% for order in orders %}
                            <div class="order-card">
                                <div class="order-header">
                                    <h3>Commande #{{ order.id }}</h3>
                                    <span class="order-date">{{ order.date }}</span>
                                </div>
                                <div class="order-details">
                                    <div class="order-items">
                                        {% for item in order.items %}
                                            <div class="order-item">
                                                <div class="item-info">
                                                    <span class="item-name">{{ item.product.name }}</span>
                                                    <span class="item-quantity">x{{ item.quantity }}</span>
                                                </div>
                                                <span class="item-price">{{ (item.price * item.quantity)|number_format(2, ',', ' ') }} €</span>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    
                                    {% if order.shipping %}
                                        <div class="order-shipping">
                                            <h4>Adresse de livraison</h4>
                                            <p>{{ order.shipping.firstName }} {{ order.shipping.lastName }}</p>
                                            <p>{{ order.shipping.address }}</p>
                                            <p>{{ order.shipping.postalCode }} {{ order.shipping.city }}</p>
                                        </div>
                                    {% endif %}
                                    
                                    <div class="order-total">
                                        Total : {{ order.total|number_format(2, ',', ' ') }} €
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}
