{% extends 'base.html.twig' %}

{% block title %}Mon profil - MakeYourPC{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="profile-container">
        <!-- Section Informations -->
        <div class="profile-section">
            <div class="section-header">
                <i data-lucide="user-circle-2"></i>
                <h2>Mes informations</h2>
            </div>
            <div class="section-content">
                <div class="info-item">
                    <i data-lucide="user"></i>
                    <div class="info-text">
                        <span class="label">Nom</span>
                        <span class="value">{{ user.name }}</span>
                    </div>
                </div>
                <div class="info-item">
                    <i data-lucide="user"></i>
                    <div class="info-text">
                        <span class="label">Prénom</span>
                        <span class="value">{{ user.surname }}</span>
                    </div>
                </div>
                <div class="info-item">
                    <i data-lucide="mail"></i>
                    <div class="info-text">
                        <span class="label">Email</span>
                        <span class="value">{{ user.email }}</span>
                    </div>
                </div>
                <div class="info-item">
                    <i data-lucide="phone"></i>
                    <div class="info-text">
                        <span class="label">Téléphone</span>
                        <span class="value">{{ user.telephone ?: 'Non renseigné' }}</span>
                    </div>
                </div>
                <a href="{{ path('app_profile_edit') }}" class="link-action">
                    Modifier mes informations
                </a>
            </div>
        </div>

        <!-- Section Adresses -->
        <div class="profile-section">
            <div class="section-header">
                <div class="header-left">
                    <i data-lucide="map-pin"></i>
                    <h2>Mes adresses</h2>
                </div>
                <a href="{{ path('app_address_new') }}" class="btn-new">
                    <i data-lucide="plus-circle"></i>
                    Nouvelle adresse
                </a>
            </div>
            <div class="section-content">
                {% if user.addresses is empty %}
                    <div class="empty-state">
                        <i data-lucide="package-x"></i>
                        <p>Aucune adresse enregistrée</p>
                    </div>
                {% else %}
                    <div class="addresses-list">
                        {% for address in user.addresses %}
                            <div class="address-item">
                                <div class="address-header">
                                    <h3>{{ address.name }}</h3>
                                    <div class="address-actions">
                                        <a href="{{ path('app_address_edit', {'id': address.id}) }}" class="action-btn edit">
                                            <i data-lucide="edit-3"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_address_delete', {'id': address.id}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette adresse ?');"
                                              class="delete-form">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
                                            <button type="submit" class="action-btn delete">
                                                <i data-lucide="trash-2"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <div class="address-details">
                                    <p><i data-lucide="user"></i> {{ address.firstname }} {{ address.lastname }}</p>
                                    <p><i data-lucide="home"></i> {{ address.address }}</p>
                                    <p><i data-lucide="map-pin"></i> {{ address.postal }} {{ address.city }}</p>
                                    <p><i data-lucide="globe"></i> {{ address.country }}</p>
                                    {% if address.phone %}
                                        <p><i data-lucide="phone"></i> {{ address.phone }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Section Commandes -->
        <div class="profile-section">
            <div class="section-header">
                <i data-lucide="shopping-bag"></i>
                <h2>Historique des commandes</h2>
            </div>
            <div class="section-content">
                {% if orders is empty %}
                    <div class="empty-state">
                        <i data-lucide="package-x"></i>
                        <p>Aucune commande pour le moment</p>
                        <a href="{{ path('app_products') }}" class="link-action">
                            Découvrir nos produits
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --bg-dark: #0A0A0A;
            --bg-card: #141414;
            --bg-hover: #1A1A1A;
            --bg-active: #222222;
            --text-primary: #FFFFFF;
            --text-secondary: #A0A0A0;
            --accent-color: #6366F1;
            --accent-hover: #4F46E5;
            --border-color: #262626;
            --danger-color: #DC2626;
            --success-color: #059669;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1);
        }



        .profile-container {
            display: grid;
            grid-template-columns: 400px 1fr 400px;
            gap: 2rem;
        }

        .profile-section {
            background: var(--bg-card);
            border-radius: 20px;
            box-shadow: var(--card-shadow);
            border: 1px solid var(--border-color);
            height: fit-content;
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .profile-section:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        .section-header {
            padding: 1.75rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .section-header h2 {
            font-size: 1.35rem;
            font-weight: 600;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-header i {
            color: var(--accent-color);
        }

        .section-content {
            padding: 1.75rem;
        }

        /* Style des informations personnelles */
        .info-item {
            background: var(--bg-hover);
            margin-bottom: 1.25rem;
            padding: 1.25rem;
            border-radius: 16px;
            border: 1px solid var(--border-color);
            transition: all 0.2s ease;
        }

        .info-item:hover {
            background: var(--bg-active);
            border-color: var(--accent-color);
            transform: translateX(6px);
        }

        .info-text {
            margin-left: 0.5rem;
        }

        .label {
            font-size: 0.9rem;
            color: var(--text-secondary);
            margin-bottom: 0.35rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .value {
            color: var(--text-primary);
            font-size: 1.1rem;
            font-weight: 500;
        }

        /* Style des adresses */
        .address-item {
            background: var(--bg-hover);
            border-radius: 16px;
            padding: 1.75rem;
            margin-bottom: 1.25rem;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

        .address-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            border-color: var(--accent-color);
        }

        .address-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        .address-header h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .address-actions {
            display: flex;
            gap: 0.75rem;
        }

        .action-btn {
            padding: 0.6rem;
            border-radius: 12px;
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .action-btn:hover {
            transform: translateY(-2px);
        }

        .action-btn.edit:hover {
            background: rgba(99, 102, 241, 0.1);
            border-color: var(--accent-color);
            color: var(--accent-color);
        }

        .action-btn.delete:hover {
            background: rgba(220, 38, 38, 0.1);
            border-color: var(--danger-color);
            color: var(--danger-color);
        }

        .address-details p {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 0.85rem 0;
            color: var(--text-secondary);
            font-size: 1rem;
            line-height: 1.5;
        }

        .address-details i {
            color: var(--accent-color);
            opacity: 0.8;
        }

        /* Boutons et liens */
        .btn-new {
            background: var(--accent-color);
            color: white;
            padding: 0.85rem 1.75rem;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
            transition: all 0.2s ease;
            border: none;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-new:hover {
            background: var(--accent-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .link-action {
            color: var(--accent-color);
            background: rgba(99, 102, 241, 0.1);
            padding: 0.85rem 1.75rem;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
            transition: all 0.2s ease;
            text-decoration: none;
            margin-top: 1.25rem;
        }

        .link-action:hover {
            background: rgba(99, 102, 241, 0.2);
            transform: translateY(-2px);
        }

        /* État vide */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-secondary);
        }

        .empty-state i {
            width: 64px;
            height: 64px;
            margin-bottom: 1.5rem;
            color: var(--text-secondary);
            opacity: 0.7;
        }

        .empty-state p {
            margin-bottom: 2rem;
            font-size: 1.15rem;
            line-height: 1.6;
        }

        /* Responsive */
        @media (max-width: 1400px) {
            .profile-container {
                grid-template-columns: 1fr 1fr;
            }
        }

        @media (max-width: 900px) {
            .profile-container {
                grid-template-columns: 1fr;
            }

            .page-wrapper {
                padding: 1rem;
                margin: 1rem auto;
            }

            .section-header, .section-content {
                padding: 1.25rem;
            }
        }

        /* Animations raffinées */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .profile-section {
            animation: fadeInUp 0.5s ease-out forwards;
            opacity: 0;
        }

        .profile-section:nth-child(1) { animation-delay: 0.1s; }
        .profile-section:nth-child(2) { animation-delay: 0.2s; }
        .profile-section:nth-child(3) { animation-delay: 0.3s; }

        .info-item, .address-item {
            animation: fadeInUp 0.4s ease-out forwards;
            opacity: 0;
            animation-delay: calc(var(--animation-order, 0) * 0.1s + 0.4s);
        }

        /* Glassmorphism effect */
        .profile-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 20px;
            backdrop-filter: blur(10px);
            z-index: -1;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
{% endblock %}
