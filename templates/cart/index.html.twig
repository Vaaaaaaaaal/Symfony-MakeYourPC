{% extends 'base.html.twig' %}

{% block title %}Votre panier - MakeYourPC{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Votre panier</h1>
        
        {% if cartItems|length > 0 %}
            <div class="cart-container">
                <div class="cart-items">
                    {% for item in cartItems %}
                        <div class="cart-item">
                            <div class="item-details">
                                <h3>{{ item.name }}</h3>
                                <p class="item-price">{{ item.price|number_format(2, ',', ' ') }} €</p>
                            </div>
                            <div class="item-quantity">
                                <button class="quantity-btn" onclick="updateQuantity({{ item.id }}, -1)">-</button>
                                <span class="quantity">{{ item.quantity }}</span>
                                <button class="quantity-btn" onclick="updateQuantity({{ item.id }}, 1)">+</button>
                            </div>
                            <div class="item-total">
                                {{ (item.price * item.quantity)|number_format(2, ',', ' ') }} €
                            </div>
                            <button class="remove-item" onclick="removeItem({{ item.id }})">
                                <i data-lucide="trash-2"></i>
                            </button>
                        </div>
                    {% endfor %}
                </div>
                <div class="cart-summary">
                    <h2>Résumé de la commande</h2>
                    <div class="summary-row">
                        <span>Sous-total</span>
                        <span>{{ total|number_format(2, ',', ' ') }} €</span>
                    </div>
                    <div class="summary-row">
                        <span>Frais de livraison</span>
                        <span>Gratuit</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total</span>
                        <span>{{ total|number_format(2, ',', ' ') }} €</span>
                    </div>
                    <button class="btn-checkout">Procéder au paiement</button>
                </div>
            </div>
        {% else %}
            <p>Votre panier est vide.</p>
            <a href="{{ path('app_products') }}" class="btn-continue-shopping">Continuer vos achats</a>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function updateQuantity(itemId, change) {
            // Implémentez la logique de mise à jour de la quantité ici
            console.log('Mise à jour de la quantité pour l\'item', itemId, 'avec un changement de', change);
        }

        function removeItem(itemId) {
            // Implémentez la logique de suppression d'un item ici
            console.log('Suppression de l\'item', itemId);
        }
    </script>
{% endblock %}
