<header>
    <nav class="container">
        <a href="{{ path('app_home') }}" class="logo">
            <img src="{{ asset('images/Logo.svg') }}" alt="Logo MakeYourPC" class="img-fluid" style="width: auto; height: 50px; max-width: 100%; margin-top: 10px;">
        </a>
        
        <ul class="nav-links">
            <li><a href="{{ path('app_products') }}">Produits</a></li>
            <li class="cart-icon">
                <a href="{{ path('app_cart') }}">
                    <i data-lucide="shopping-cart"></i>
                    <span class="cart-count">{{ app.session.get('cart')|default([])|reduce((carry, v) => carry + v, 0) }}</span>
                </a>
            </li>
            <li class="user-menu">
                <span class="user-icon-wrapper">
                    <i data-lucide="user"></i>
                </span>
                <div class="user-dropdown">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="user-info">
                            <i data-lucide="user" class="user-icon"></i>
                            <span>{{ app.user.name }}</span>
                        </div>
                        <div class="dropdown-divider"></div>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_admin') }}" class="dropdown-item">
                                <i data-lucide="settings" style="margin-right: 8px;"></i>
                                <span>Administration</span>
                            </a>
                        {% else %}
                            <a href="{{ path('app_profile') }}" class="dropdown-item">
                                <i data-lucide="settings" style="margin-right: 8px;"></i>
                                <span>Mon profil</span>
                            </a>
                        {% endif %}
                        <a href="{{ path('app_logout') }}" class="dropdown-item">
                            <i data-lucide="log-out" style="margin-right: 8px;"></i>
                            <span>Se déconnecter</span>
                        </a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="dropdown-item">
                            <i data-lucide="log-in" style="margin-right: 8px;"></i>
                            <span>Se connecter</span>
                        </a>
                        <a href="{{ path('app_register') }}" class="dropdown-item">
                            <i data-lucide="user-plus" style="margin-right: 8px;"></i>
                            <span>S'inscrire</span>
                        </a>
                    {% endif %}
                </div>
            </li>
        </ul>
    </nav>
</header>

<style>
    .user-menu {
        position: relative;
    }
    .user-icon-wrapper {
        cursor: pointer;
        transition: color 0.3s ease;
    }
    .user-icon-wrapper:hover {
        color: #5D69D6; /* Couleur de survol de l'icône */
    }
    .user-dropdown {
        display: none;
        position: absolute;
        right: 0;
        background-color: #1e1e1e; /* Fond gris clair */
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        border-radius: 8px;
        padding: 12px;
        z-index: 1000;
        min-width: 200px;
    }
    .user-menu:hover .user-dropdown {
        display: block;
    }
    .user-info {
        display: flex;
        align-items: center;
        padding: 8px 0;
        margin-bottom: 8px;
        color: #ffffff;
    }
    .user-icon {
        margin-right: 8px;
    }
    .dropdown-divider {
        height: 1px;
        background-color: #d0d0d0; /* Ligne de séparation légèrement plus foncée */
        margin: 8px 0;
    }
    .dropdown-item {
        display: flex;
        align-items: center;
        padding:  8px 0;
        color: #ffffff;
        text-decoration: none;
        transition: background-color 0.2s;
        border-radius: 4px;
    }
    .dropdown-item:hover {
        background-color: #333333; /* Couleur de survol légèrement plus foncée */
    }
    .dropdown-item i {
        margin-right: 8px;
    }
</style>
