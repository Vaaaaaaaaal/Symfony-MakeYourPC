{% extends 'base.html.twig' %}

{% block title %}Administration - MakeYourPC{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Tableau de bord d'administration</h1>
        
        <div class="admin-dashboard">
            <div class="stats-grid">
                <div class="stat-card">
                    <i data-lucide="users" class="stat-icon"></i>
                    <h3>Utilisateurs</h3>
                    <p class="stat-value">1250</p>
                </div>
                <div class="stat-card">
                    <i data-lucide="shopping-cart" class="stat-icon"></i>
                    <h3>Commandes</h3>
                    <p class="stat-value">587</p>
                </div>
                <div class="stat-card">
                    <i data-lucide="dollar-sign" class="stat-icon"></i>
                    <h3>Revenus</h3>
                    <p class="stat-value">256 789,50 €</p>
                </div>
                <div class="stat-card">
                    <i data-lucide="package" class="stat-icon"></i>
                    <h3>Produits</h3>
                    <p class="stat-value">342</p>
                </div>
            </div>

            <div class="admin-sections">
                <div class="admin-section">
                    <h2><i data-lucide="list" class="section-icon"></i> Commandes récentes</h2>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Utilisateur</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set fakeOrders = [
                                {id: 1001, user: 'Alice Dupont', total: 1299.99, date: '2024-03-15'},
                                {id: 1002, user: 'Bob Martin', total: 799.50, date: '2024-03-14'},
                                {id: 1003, user: 'Charlie Leclerc', total: 2499.99, date: '2024-03-13'},
                                {id: 1004, user: 'Diana Prince', total: 599.99, date: '2024-03-12'},
                                {id: 1005, user: 'Ethan Hunt', total: 1799.99, date: '2024-03-11'}
                            ] %}
                            {% for order in fakeOrders %}
                                <tr>
                                    <td>#{{ order.id }}</td>
                                    <td>{{ order.user }}</td>
                                    <td>{{ order.total|number_format(2, ',', ' ') }} €</td>
                                    <td>{{ order.date }}</td>
                                    <td class="actions" style="display: flex; justify-content: space-around;">
                                        <a href="#" style="color: #3498db;"><i data-lucide="eye"></i></a>
                                        <a href="#" style="color: #3498db;"><i data-lucide="edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="admin-section">
                    <h2><i data-lucide="zap" class="section-icon"></i> Actions rapides</h2>
                    <div class="quick-actions">
                        <a href="{{ path('app_admin_products') }}" class="btn-quick-action"><i data-lucide="package"></i> Gérer les produits</a>
                        <a href="#" class="btn-quick-action"><i data-lucide="users"></i> Gérer les utilisateurs</a>
                        <a href="#" class="btn-quick-action"><i data-lucide="bar-chart-2"></i> Voir les statistiques</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
