{% extends 'base.html.twig' %}

{% block title %}Modifier un produit - MakeYourPC{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Modifier le produit</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="edit-product-form">
            {{ form_start(form) }}
                <div class="form-grid">
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-input'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.price, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.price, {'attr': {'class': 'form-input'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.stock, {'attr': {'class': 'form-input'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.type, 'Type de produit', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-input'}}) }}
                    </div>
                </div>

                <div class="image-section">
                    {% if product.imagePath %}
                        <div class="current-image">
                            <h3>Image actuelle</h3>
                            <img src="{{ asset('images/products/' ~ product.imagePath) }}" 
                                 alt="Image actuelle" 
                                 class="product-image">
                        </div>
                    {% endif %}
                    <div class="new-image">
                        <h3>Nouvelle image</h3>
                        {{ form_widget(form.image, {'attr': {'class': 'form-input-file'}}) }}
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <i data-lucide="save"></i>
                        Enregistrer les modifications
                    </button>
                    <a href="{{ path('app_admin_products') }}" class="btn-secondary">
                        <i data-lucide="x"></i>
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .edit-product-form {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 2rem;
            background: var(--primary-color);
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(93, 105, 214, 0.1);
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--text-color);
            font-weight: 500;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #444;
            border-radius: 4px;
            background: var(--secondary-color);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .form-input:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 2px rgba(93, 105, 214, 0.2);
            outline: none;
        }

        .image-section {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: var(--secondary-color);
            border-radius: 8px;
        }

        .current-image, .new-image {
            padding: 1rem;
        }

        .current-image h3, .new-image h3 {
            color: var(--accent-color);
            margin-bottom: 1rem;
            font-size: 1.2rem;
        }

        .product-image {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .form-input-file {
            width: 100%;
            padding: 1rem;
            background: var(--primary-color);
            border-radius: 4px;
            color: var(--text-color);
            cursor: pointer;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: flex-end;
        }

        .btn-primary, .btn-secondary {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 4px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-primary {
            background-color: var(--accent-color);
            color: white;
        }

        .btn-primary:hover {
            background-color: #4857c4;
            transform: translateY(-2px);
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

        .alert {
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 4px;
            font-weight: 500;
        }

        .alert-success {
            background-color: #28a745;
            color: white;
        }

        .alert-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
{% endblock %} 