{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}
    <h1>Mes adresses</h1>

    <a href="{{ path('app_address_new') }}" class="btn btn-primary">Ajouter une nouvelle adresse</a>

    <div class="row mt-4">
        {% for address in addresses %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ address.name }}</h5>
                        <p class="card-text">
                            {{ address.firstname }} {{ address.lastname }}<br>
                            {{ address.address }}<br>
                            {{ address.postal }} {{ address.city }}<br>
                            {{ address.country }}<br>
                            {% if address.phone %}
                                Tél: {{ address.phone }}
                            {% endif %}
                        </p>
                        <a href="{{ path('app_address_edit', {'id': address.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                        <a href="{{ path('app_address_delete', {'id': address.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette adresse ?')">Supprimer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %} 