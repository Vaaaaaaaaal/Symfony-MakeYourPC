{% extends 'base.html.twig' %}

{% block title %}Nouvelle adresse{% endblock %}

{% block body %}
    <div class="container">
        <h1>Ajouter une nouvelle adresse</h1>

        {{ form_start(form, {'attr': {'class': 'address-form'}}) }}
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Ajouter l'adresse</button>
                <a href="{{ path('app_address_index') }}" class="btn btn-secondary">Retour</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            padding: 2rem 0;
        }

        h1 {
            color: #3498db;
            margin-bottom: 2rem;
        }

        .address-form {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background: #2a2a2a;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            color: #3498db;
            margin-bottom: 0.5rem;
            display: block;
        }

        input[type="text"] {
            width: 100%;
            padding: 0.75rem;
            border-radius: 4px;
            border: 1px solid #404040;
            background: #333333;
            color: #e0e0e0;
        }

        input[type="text"]:focus {
            border-color: #3498db;
            outline: none;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
        }

        .form-actions {
            margin-top: 2rem;
            display: flex;
            gap: 1rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .btn-primary {
            background: #3498db;
            color: white;
        }

        .btn-primary:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: #404040;
            color: #e0e0e0;
        }

        .btn-secondary:hover {
            background: #4a4a4a;
            transform: translateY(-2px);
        }
    </style>
{% endblock %} 